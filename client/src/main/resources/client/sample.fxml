<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.gui.controllers.Controller">
    <center>
        <Pane fx:id="idPane"/>
    </center>
    <bottom>
        <VBox>
            <Label fx:id="label"/>
            <HBox>
                <Button fx:id="buttonStart" onAction="#startDraw" text="Поехали!"/>
                <Button fx:id="buttonStop" disable="true" onAction="#cancelDraw" text="Стоп"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
